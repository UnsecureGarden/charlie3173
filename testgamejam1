document.addEventListener('DOMContentLoaded', function() {
    // Récupérer les éléments audio
    const audio1 = document.getElementById('audio1');
    const audio2 = document.getElementById('audio2');

    // Fonction pour jouer les pistes audio
    function playRandomTrack() {
        // Générer un nombre aléatoire entre 0 et 1
        const random = Math.random();
        
        // Choisir aléatoirement quelle piste jouer en fonction du nombre généré
        if (random < 0.5) {
            audio1.play();
            console.log('Playing track 1');
        } else {
            audio2.play();
            console.log('Playing track 2');
        }
    }

    // Appeler la fonction pour jouer les pistes audio à intervalles aléatoires
    setInterval(playRandomTrack, 5000); // Changer de piste toutes les 5 secondes (5000 millisecondes)
});
